Player play;
void setup(){
  size(500,500); 
    BlackBox.init(this);
  play = new Player();
}
void draw(){
  background(255);  
  
   if (BlackBox.isKeyDown(BlackBox.VK_NUMPAD4) && BlackBox.isKeyDown(BlackBox.VK_NUMPAD5)) {
           println("Both the '4' key and the '5' key are pressed!");
  }  
  
  
  play.display();
  play.move();
}
class Player{
  float x;
  float y;
  float d;
  Player() {
    x=0;
    y=0;
    d=100;
  }
  void display() {
    noStroke();
    fill(0);
    ellipse(x, y, d, d);
  }
  void move() {
    if(keyPressed){
      if(key=='6'){
        x+=5;
      }
      if(key=='4'){
        x-=5;
      }
      if(key=='2'){
        y+=5;
      }
      if(key=='8'){
        y-=5;
      }
      if(key == '1'){
        x-=5;
        y+=5;
      }
      if(key == '3'){
        x+=5;
        y+=5;
      }
      if(key == '7'){
        x-=5;
        y-=5;
      }
      if(key == '9'){
        x+=5;
        y-=5;
      }
      
    }
  }
}
class Timer {
  int time;
  int currentTime;
  int oldTime;
  Timer(int time_) {
    time=time_;
    currentTime=millis();
    oldTime=0;
  }
  void update() {
    currentTime=millis();
  }
  boolean checkTime() {
    currentTime=millis();  
    if (currentTime-oldTime>=time) {
      oldTime=currentTime;
      return true;
    }
    else {
      return false;
    }
  }
}
class sizePowerUp{
  float x;
  float y;
  float d;
  sizePowerUp(){
    x=random(width-d/2);
    y=random(height-d/2);
    d=25;
  }
  void display(){
    noStroke();
    fill(0,0,random(255));
    ellipse(x,y,d,d);
  }
}
class speedPowerUp {
  float x;
  float y;
  float d;
  speedPowerUp() {
    x=random(width-d/2);
    y=random(height-d/2);
    d=20;
  }
  void display() {
    noStroke();
    fill(random(255), 120, 0);
    ellipse(x, y, d, d);
  }
}
